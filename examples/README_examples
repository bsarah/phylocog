
ete3 as a requirement for the plotting of the tree, create some conda or mamba environment

conda activate ete3
export QT_QPA_PLATFORM=offscreen
export XDG_RUNTIME_DIR=/tmp/runtime-runner


#example for sequence trees
python3 ../treeAnalysis/analyseCOGtrees.py -i sequence/seqtreelist.txt -j sequence -f ../../translation_table/cog-20.translation_2303.tsv -o sequence -s 1

output to stdout

COGid	numA	numB	numTotal	NumSplits	avSupportSplits	avSupportTree	avDistAA	avDistBB	avDistAB	Dbar	D
COG1036	41	36	77	2	0.8395	0.7636578947368421	1.7410392926829272	1.7861699206349197	2.9549072425474234	0.5968392446520661	0.5892026888742465
COG1059	25	35	60	8	0.941875	0.6951355932203387	1.8104977333333319	2.644327226890755	2.4373615885714295	0.9138621411595972	0.7428104807356422

#example for structure trees
python3 ../treeAnalysis/analyseCOGtrees.py -i structure/plotlist.txt -j structure -f ../../translation_table/cog-20.translation_2303.tsv -o structure -s 1

output to stdout

